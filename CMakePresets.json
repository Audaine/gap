{
    "version": 3,
    "cmakeMinimumRequired": {
      "major": 3,
      "minor": 21,
      "patch": 0
    },
    "configurePresets": [
      {
        "name": "ninja-multi-vcpkg-clang-12",
        "displayName": "Ninja Multi-Config Configure Settings",
        "description": "Configure with vcpkg toolchain",
        "binaryDir": "${sourceDir}/builds/${presetName}",
        "generator": "Ninja Multi-Config",
        "cacheVariables": {
          "CMAKE_TOOLCHAIN_FILE": {
            "type": "FILEPATH",
            "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
          }
        },
        "environment": {
          "CC": "clang-12",
          "CXX": "clang++-12"
        }
      }
    ],
    "buildPresets": [
      {
        "name": "ninja-multi-vcpkg-clang-12",
        "configurePreset": "ninja-multi-vcpkg-clang-12",
        "displayName": "Build ninja-multi-vcpkg-clang-12",
        "description": "Build ninja-multi-vcpkg-ckang-12 Configurations"
      }
    ],
    "testPresets": [
      {
        "name": "ninja-multi-vcpkg-clang-12",
        "configurePreset": "ninja-multi-vcpkg-clang-12",
        "output": {
          "verbosity": "verbose"
        },
        "configuration": "Debug"
      }
    ]
  }

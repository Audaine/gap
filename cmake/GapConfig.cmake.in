if (TARGET gap::gap)
    return()
endif()

@PACKAGE_INIT@

# Provide path for scripts
list(APPEND CMAKE_MODULE_PATH "${CMAKE_CURRENT_LIST_DIR}")

# TODO(Heno): use find_dependency, which fails because FindCoroutines produces
# errors during feature testings find_package is not optimal because it may
# break build even if gap is not required
find_package(Coroutines COMPONENTS Experimental Final REQUIRED)

include("${CMAKE_CURRENT_LIST_DIR}/GapTargets.cmake")
check_required_components("@PROJECT_NAME@")

if (NOT DEFINED @PROJECT_NAME@_FIND_QUIETLY)
    message(STATUS "Found Gap: ${CMAKE_CURRENT_LIST_DIR}")
endif()
